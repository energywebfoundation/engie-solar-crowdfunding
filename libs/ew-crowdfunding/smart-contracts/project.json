{
  "root": "libs/ew-crowdfunding/smart-contracts",
  "sourceRoot": "libs/ew-crowdfunding/smart-contracts/src",
  "projectType": "library",
  "targets": {
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["libs/ew-crowdfunding/smart-contracts/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/libs/ew-crowdfunding/smart-contracts"],
      "options": {
        "jestConfig": "libs/ew-crowdfunding/smart-contracts/jest.config.js",
        "passWithNoTests": true
      }
    },
    "hardhat-test": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "commands": [
          {
            "command": "npx hardhat test"
          }
        ]
      }
    },
    "hardhat-test-volta": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "commands": [
          {
            "command": "npx hardhat test --network volta"
          }
        ]
      }
    },
    "compile": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "commands": [
          {
            "command": "npx hardhat compile"
          }
        ]
      }
    }
  },
  "tags": []
}
